<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_app.MainPage">
	<VerticalStackLayout Spacing="15" Padding="20">
		<Label Text="Introduce un numero" FontSize="20"/>
		<Entry x:Name="NumTelefonoTexto" Text="6-NETMAUI"/>
		<Button x:Name="BotonTraducir" Text="Traducir" Clicked="traducir"/>
		<Button x:Name="BotonLlamar" Text="Llamar" IsEnabled="False" Clicked="llamada"/>
	</VerticalStackLayout>
</ContentPage>
